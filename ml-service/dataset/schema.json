{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "WebSafety Dataset Schema",
    "description": "Schema for the novel WebSafety multi-modal, contextual, and multilingual dataset",
    "type": "object",
    "required": [
        "id",
        "text",
        "primary_label",
        "severity",
        "context",
        "language",
        "timestamp"
    ],
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier for the sample",
            "pattern": "^WS-[0-9]{8}$"
        },
        "text": {
            "type": "string",
            "description": "The text content to be classified",
            "minLength": 1,
            "maxLength": 5000
        },
        "url": {
            "type": [
                "string",
                "null"
            ],
            "description": "Associated URL if applicable",
            "format": "uri"
        },
        "primary_label": {
            "type": "string",
            "description": "Primary classification category",
            "enum": [
                "safe",
                "phishing",
                "malware",
                "hate_speech",
                "cyberbullying",
                "sexual_content",
                "violence"
            ]
        },
        "secondary_labels": {
            "type": "array",
            "description": "Additional applicable labels",
            "items": {
                "type": "string",
                "enum": [
                    "spam",
                    "scam",
                    "harassment",
                    "doxxing",
                    "threat",
                    "self_harm",
                    "misinformation",
                    "impersonation",
                    "profanity",
                    "sensitive_content"
                ]
            },
            "uniqueItems": true
        },
        "severity": {
            "type": "string",
            "description": "Risk severity level",
            "enum": [
                "low",
                "medium",
                "high"
            ]
        },
        "context": {
            "type": "string",
            "description": "Platform or context type",
            "enum": [
                "social_media",
                "email",
                "comment",
                "message",
                "forum",
                "review",
                "chat",
                "other"
            ]
        },
        "language": {
            "type": "string",
            "description": "Language code (en=English, hi=Hindi, te=Telugu, en-hi=Hinglish, en-te=Tenglish)",
            "enum": [
                "en",
                "hi",
                "en-hi",
                "te",
                "en-te",
                "other"
            ],
            "default": "en"
        },
        "target_demographic": {
            "type": "string",
            "description": "Primary target age group",
            "enum": [
                "children",
                "teens",
                "adults",
                "all"
            ]
        },
        "contains_pii": {
            "type": "boolean",
            "description": "Whether sample contains personally identifiable information",
            "default": false
        },
        "requires_context": {
            "type": "boolean",
            "description": "Whether classification requires additional context",
            "default": false
        },
        "is_sarcasm": {
            "type": "boolean",
            "description": "Whether content uses sarcasm",
            "default": false
        },
        "is_borderline": {
            "type": "boolean",
            "description": "Whether this is an edge case or borderline example",
            "default": false
        },
        "cultural_context": {
            "type": "string",
            "description": "Specific cultural context if relevant",
            "enum": [
                "indian",
                "western",
                "global",
                "other",
                null
            ]
        },
        "timestamp": {
            "type": "string",
            "description": "Collection timestamp in ISO 8601 format",
            "format": "date-time"
        },
        "source": {
            "type": "string",
            "description": "Source dataset or collection method"
        },
        "annotator_id": {
            "type": "string",
            "description": "ID of the human annotator"
        },
        "annotation_confidence": {
            "type": "number",
            "description": "Annotator's confidence score (0-1)",
            "minimum": 0,
            "maximum": 1
        },
        "notes": {
            "type": "string",
            "description": "Additional notes or comments"
        }
    }
}